# Email configuration (prod)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USER=prod@example.com
EMAIL_PASS=replace_me
EMAIL_FROM=Puppy Ping <prod@example.com>
EMAILS_TO=alerts@example.com

# Postgres (prod docker-compose)
PGHOST=postgres
PGPORT=5432
PGUSER=puppyping
PGPASSWORD=replace_me
PGDATABASE=puppyping

# pgAdmin (prod)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=replace_me

# PupSwipe prod host mapping
PUPSWIPE_BIND_IP=0.0.0.0
PUPSWIPE_PORT=8000
# PupSwipe cookie signing secret (set a long random value)
PUPSWIPE_SESSION_SECRET=replace_me_with_long_random_secret
# PupSwipe feed sources (comma-separated)
PUPSWIPE_SOURCES=paws_chicago,wright_way
